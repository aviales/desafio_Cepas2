<p id="notice"><%= notice %></p>

<h1>Strains</h1>

<table class="table table-sm" >
  <thead class="thead-dark">
    <tr class="text-center">
      <th  style="width: 15%">Name</th>
       <th  style="width: 30%">Available</th>
       <th colspan="3">Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @strains.order(:name).each do |strain| %>
      <tr class="text-center">
        <td><%= strain.name %></td>
        <td><%= strain.available %></td>
        <td style="width: 5%"><%= link_to 'Show', strain %></td>
        <td style="width: 5%"><%= link_to 'Edit', edit_strain_path(strain) %></td>
        <td style="width: 5%"><%= link_to 'Destroy', strain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="btn btn-dark">New Strain</button>'.html_safe, new_strain_path %>
